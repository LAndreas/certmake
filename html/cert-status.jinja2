<html>
  <head>
    <title>Cert Status</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="css/bootstrap.min.css" rel="stylesheet" media="screen">
  </head>

  <body>
    <div class="container" style="padding-top: 5px;">
      <table class="table table-striped table-bordered table-condensed">
        <thead>
          <tr>
            <th>Name</th>
            <th>Status</th>
            <th>Expire Date</th>
            <th>IP</th>
            <th>Alternative Subject Names</th>
          </tr>
        </thead>

        <tbody>
          {% for cert in all_certs %}
          <tr {% if not (cert.verify_ok) %}class="error"{% endif %}>
            <td>{{ cert.dnsname }}</td>

            {% if cert.verify_ok %}
            <td>{{ cert.verify_result }}</td>
            {% else %}
            <td>{{ cert.verify_result }}</td>
            {% endif %}

            {% if cert.expire_days_left < 90 %}
            <td><a href="#" class="btn btn-danger disabled">{{ cert.expire_date }}</a></td>
            {% elif cert.expire_days_left < 365 %}
            <td><a href="#" class="btn btn-warning disabled">{{ cert.expire_date }}</a></td>
            {% else %}
            <td><a href="#" class="btn disabled">{{ cert.expire_date }}</a></td>
            {% endif %}

            <td>{{ cert.ip }}:{{cert.port}}</td>
            {% if cert.alt_subjects|length > 0 %}
            <td>
              <ul>
              {% for alt_subject in cert.alt_subjects %}
                <li>{{ alt_subject }}</li>
              {% endfor %}
              </ul>
            </td>
           {% else %} <td>&nbsp;</td>{% endif %}
          </tr>
          {% endfor %}
        </tbody>
      </table>

      Created {{ now }}.
    </div>
    <!-- <script src="js/jquery.min.js"></script> -->
    <!-- <script src="js/tablesort.js"></script> -->
    <!-- <script src="js/bootstrap.min.js"></script> -->
  </body>
</html>
